<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/country_nav"
    app:startDestination="@id/feedFragment">
    <fragment
        android:id="@+id/feedFragment"
        android:name="com.aek.kotlinmvvm.view.FeedFragment"
        android:label="Countries"
        tools:layout="@layout/fragment_feed">
        <action
            android:id="@+id/action_feedFragment_to_countryFragment"
            app:destination="@id/countryFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/countryFragment"
        android:name="com.aek.kotlinmvvm.view.CountryFragment"
        android:label="Detail"
        tools:layout="@layout/fragment_country">
        <argument
            android:name="name"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="capital"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="region"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="currency"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="flag"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="language"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>